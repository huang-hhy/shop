/* pages/cart/index.wxss */
.revice_address_row{
	
}
.revice_address_row .address_btn{
	padding: 20rpx;
}
.revice_address_row .address_btn button{
	width: 60%;
}

.revice_address_row .user_info_row{
	display: flex;
	padding: 20rpx;
}
.revice_address_row .user_info_row .user_info{
	flex: 5;
}
.revice_address_row .user_info_row .user_phone{
	flex: 3;
	text-align: right;
}

.cart_title{
	padding: 20rpx;
	font-size: 36rpx;
	color: #EB4450;
	border-top: 1rpx solid currentcolor;
	border-bottom: 1rpx solid currentColor;
}
.cart_item{
	display: flex;
	padding: 10rpx;
	border-bottom: 1rpx solid #ccc;
}
.cart_item .cart_chk_wrap{
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	
}
.cart_item .cart_img_wrap{
	flex: 2;
	display: flex;
	justify-content: center;
	align-items: center;
}
.cart_item .cart_img_wrap image{
	width: 80%;
}
.cart_item .cart_info_wrap{
	flex: 4;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.goods_name{
	display: -webkit-box;
	overflow: hidden;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
	color: #666;
}
.goods_price_wrap{
	display: flex;
	justify-content: space-between;
}
.goods_price{
	color: #EB4450;
	font-size: 34rpx;
}
.cart_num_tool{
	display: flex;
}
.cart_num_tool .num_edit{
	width: 55rpx;
	height: 55rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border: 1rpx solid #ccc;
}
.cart_num_tool .goods_name{
	width: 55rpx;
	height: 55rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	
}
.goods_num{
	margin-left: 10rpx;
	margin-right: 10rpx;
	padding-top: 10rpx;
}

page{
	padding-bottom: 90rpx;
}

.footer_tool{
	border-top: 1rpx solid #ccc;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 90rpx;
	background-color: #fff;
	display: flex;
}
.all_chk_wrap{
	flex: 2;
	display: flex;
	justify-content: center;
	align-items: center;
}
.total_price_wrap{
	flex: 5;
	text-align: right;
	padding-right: 15rpx;
}
.total_price_text{
	color: #EB4450;
	font-size: 32rpx;
}
.order_pay_wrap{
	flex: 3;
	background-color: #EB4450;
	color: #fff;
	font-size: 32rpx;
	font-weight: 600;
	display: flex;
	justify-content: center;
	align-items: center;
}